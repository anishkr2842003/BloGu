<% include header.ejs %>
<div id="admin-content">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1 class="admin-heading">All Categories</h1>
            </div>
            <div class="col-md-2">
                <!-- <a class="add-new" href="/admin/create-category">add category</a> -->
            </div>
            <div class="col-md-12">
                <% if(categories.length > 0){ %>
                        <table class="content-table">
                            <thead>
                                <th>S.No.</th>
                                <th>Category Name</th>
                                <th>No. of Posts</th>
                                <!-- <th>Edit</th>
                                <th>Delete</th> -->
                            </thead>
                            <tbody>
                                <% var count = (currentPage - 1) * perPage + 1; %>
                                <% categories.forEach(function (category, index) { %>
                                <tr>
                                    <td class='id'><%= count + index %></td>
                                    <td><%= category.name %></td>
                                    <td><%= category.posts.length %></td>
                                    <!-- <td class='edit'><a href='update-category.php'><i class='fa fa-edit'></i></a></td>
                                    <td class='delete'><a href='delete-category.php'><i class='fa fa-trash-o'></i></a></td> -->
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                
            <% }else{ %>
                <h3>No catagories found</h3>
            <% } %>
            <ul class='pagination admin-pagination'>
                    
                <% for (let i = 1; i <= runLoop; i++) { %>
                    <% var active = '' %>
                    <% if(currentPage == i){active = 'active'}else{active = ''} %>
                    <li class="<%= active %>"><a href="/admin/category?page=<%= i %>"><%= i %></a></li>
                    
                <% } %>
                  
                  <!-- <li><a href="/admin/post?page=2">2</a></li>
                  <li><a href="/admin/post?page=3">3</a></li> -->
              </ul>
            </div>
        </div>
    </div>
</div>
<% include footer.ejs %>
