<!doctype html>
<html>
   <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>ADMIN | Create New Account</title>
        <!-- Bootstrap -->
        <link rel="stylesheet" href="../stylesheets/bootstrap.min.css" />
        <!-- Font Awesome Icon -->
        <link rel="stylesheet" href="../stylesheets/font-awesome.css">
        <!-- Custom stlylesheet -->
        <link rel="stylesheet" href="../stylesheets/style.css">
    </head>

    <body>
        <div id="wrapper-admin" class="body-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-offset-4 col-md-4">
                        <img class="logo" src="images/news.jpg">
                        <h3 class="heading">Create New Account</h3>
                        <!-- Form Start -->
                        <form  action="/signup" method ="POST">
                            <div class="form-group">
                                <label>First Name</label>
                                <input type="text" name="firstname" class="form-control" placeholder="first name" required>
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" name="lastname" class="form-control" placeholder="last name" required>
                            </div>
                            <div class="form-group">
                                <label>User Name</label>
                                <input type="text" name="username" class="form-control" placeholder="user name" required>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" name="password" class="form-control" placeholder="password" required>
                            </div>
                            <div class="form-group">
                                <label class="hidden">Role</label>
                                <input type="text" name="role" class="form-control hidden" placeholder="role" value="user" required>
                            </div>
                            <% if(message.length > 0){ %>
                                <div class="alert alert-danger" role="alert"><%= message %></div>
                                <% } %>
                            <input type="submit" name="login" class="btn btn-primary" value="create account" />
                        </form>
                        <!-- /Form  End -->
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
