<% include header.ejs %>
  <div id="admin-content">
      <div class="container">
          <div class="row">
              <div class="col-md-10">
                  <h1 class="admin-heading">All Posts</h1>
              </div>
              <div class="col-md-2">
                  <a class="add-new" href="/admin/create-post">add post</a>
              </div>
              <div class="col-md-12">
                  <% if(posts.length > 0){ %>
                    <table class="content-table">
                        <thead>
                            <th>S.No.</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Date</th>
                            <th>Author</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </thead>
                        <tbody>
                            <% var count = 1; %>
                            <% posts.forEach(function(post){%>
                                <tr>
                                    <td class='id'><%= count %></td>
                                    <td><%= post.title %></td>
                                    <td><%= post.category.name %></td>
                                    <td><%= new Date(post.date).toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) %></td>
                                    <td><%= post.user.username %></td>
                                    <td class='edit'><a href='/post/edit/<%= post._id %>'><i class='fa fa-edit'></i></a></td>
                                    <td class='delete'><a href='/post/delete/<%= post._id %>'><i class='fa fa-trash-o'></i></a></td>
                                </tr>
                                <% count++ %>
                                <%}) %>
                        </tbody>
                    </table>
                    <% }else{ %>
                        <h3>No posts found</h3>
                        <% } %>
                  <!-- <ul class='pagination admin-pagination'>
                      <li class="active"><a>1</a></li>
                      <li><a>2</a></li>
                      <li><a>3</a></li>
                  </ul> -->
              </div>
          </div>
      </div>
  </div>
  <% include footer.ejs %>
